<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
 
	<!-- DISPLAY NAME-->
	<display-name>Contacts Security</display-name>
 
	<!-- WELCOME FILE -->
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
  
	<!-- CONCEPT: RESOURCE INJECTION -->
	<!-- Resource taken from context.xml (inside META-INF) is placed here. This resource is then injected in DataUtils.java -->
	<resource-ref>
		<description>Resource 'jdbc/contacts-container security' used</description>
		<res-ref-name>jdbc/contacts-container security</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
  
	<!-- SECURITY CONSTRAINT -->
    <security-constraint>
		<web-resource-collection>
			<web-resource-name>Contact all interfaces</web-resource-name>
			<url-pattern>/edit</url-pattern>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>user</role-name>
		</auth-constraint>
	</security-constraint>
	
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Contact all interfaces</web-resource-name>
			<url-pattern>/delete</url-pattern>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>user</role-name>
		</auth-constraint>
	</security-constraint>
  
	<!-- LOGIN CONFIG -->
	<login-config>
		<auth-method>FORM</auth-method>
		<realm-name>DataSourceRealm</realm-name>
		<form-login-config>
			<form-login-page>/login.jsp</form-login-page>
			<form-error-page>/login-error.jsp</form-error-page>
		</form-login-config>
	</login-config>
  
	<!-- SECURITY ROLES -->
	<security-role>
		<role-name>admin</role-name>
		<description>The role that is required to view all contacts</descrption>	
	</security-role>
	<security-role>
		<role-name>user</role-name>
		<description>The role that is required to create/read/edit/delete a contact</description>
	</security-role>
	
	<!-- ERROR PAGES-->
	<error-page>
		<error-code>401</error-code>
		<location>/401.jsp</location>
	</error-page>
	<error-page>
		<error-code>403</error-code>
		<location>/403.jsp</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/404.jsp</location>
	</error-page>
  
</web-app>