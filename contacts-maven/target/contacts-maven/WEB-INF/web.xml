<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
 
	<display-name>Contacts Maven</display-name>
 
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
  
	<!-- CONCEPT: RESOURCE INJECTION -->
	<!-- Resource taken from context.xml (inside META-INF) is placed here. This resource is then injected in DataUtils.java -->
	<resource-ref>
		<description>Resource 'jdbc/contacts-maven' injected</description>
		<res-ref-name>jdbc/contacts-maven</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
  
</web-app>