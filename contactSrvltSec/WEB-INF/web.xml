
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0"
  metadata-complete="true">
<servlet>
<servlet-name>ContactServlet</servlet-name>
<servlet-class>com.lxisoft.controller.ContactServlet</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>ContactServlet</servlet-name>
<url-pattern>/save</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>SearchController</servlet-name>
<servlet-class>com.lxisoft.controller.SearchController</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>SearchController</servlet-name>
<url-pattern>/detail</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>DeleteServlet</servlet-name>
<servlet-class>com.lxisoft.controller.DeleteServlet</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>DeleteServlet</servlet-name>
<url-pattern>/delete</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>EditController</servlet-name>
<servlet-class>com.lxisoft.controller.EditController</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>EditController</servlet-name>
<url-pattern>/edit</url-pattern>
</servlet-mapping>

<resource-env-ref>
    <resource-env-ref-name>jdbc/datasource</resource-env-ref-name>
    <resource-env-ref-type>javax.sql.DataSource</resource-env-ref-type>
</resource-env-ref>


<security-constraint>
		<web-resource-collection>
		<web-resource-name>protected pages</web-resource-name>
		
				<url-pattern>/AddContact.jsp</url-pattern>
				 
				<http-method>GET</http-method>
				<http-method>POST</http-method>
		
		</web-resource-collection>
	
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
</security-constraint>
<security-role>
	
	<role-name>admin</role-name>

</security-role>
<login-config>
	<auth-method>FORM</auth-method>
		<form-login-config>
			<form-login-page>/Login.jsp</form-login-page>
			<form-error-page>/Error.jsp</form-error-page>
		</form-login-config>
</login-config>





</web-app>