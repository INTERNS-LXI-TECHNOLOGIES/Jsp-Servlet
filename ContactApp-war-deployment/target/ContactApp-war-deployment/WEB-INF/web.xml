<web-app>
<servlet>
<servlet-name>ContactsApp</servlet-name>
<servlet-class>com.lxisoft.controller.ContactsAppServlet</servlet-class>
</servlet>

<servlet-mapping>
<servlet-name>ContactsApp</servlet-name>
<url-pattern>/ContactsAppServlet</url-pattern>

</servlet-mapping>

<resource-env-ref>
    <resource-env-ref-name>jdbc/db</resource-env-ref-name>
    <resource-env-ref-type>javax.sql.DataSource</resource-env-ref-type>
</resource-env-ref>

<security-constraint>

<web-resource-collection>
<web-resource-name>Protected Page</web-resource-name>
<url-pattern>/AddContact.jsp/*</url-pattern>
<http-method>GET</http-method>
<http-method>POST</http-method>
</web-resource-collection>

<auth-constraint>
<role-name>admin</role-name>
</auth-constraint>

</security-constraint>

<security-role>
<role-name>admin</role-name>
</security-role>

<login-config>
<auth-method>FORM</auth-method>
<form-login-config>
<form-login-page>/SecurityLogin.jsp</form-login-page>
<form-error-page>/Error.jsp</form-error-page>
</form-login-config>
</login-config>

</web-app>